<h1>Listing places</h1>

<table>
  <tr>
    <th>Place type</th>
    <th>Address</th>
    <th>Description</th>
    <th>Visit</th>
    <th>Name</th>
    <th>Tags</th>
    <th>Location</th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%=h place.place_type %></td>
    <td><%=h place.address %></td>
    <td><%=h place.description %></td>
    <td><%=h place.visit %></td>
    <td><%=h place.name %></td>
    <td><%=h place.tags %></td>
    <td><%=h place.location %></td>
    <td><%= link_to 'Show', "/places/" + place.id %></td>
    <td><%= link_to 'Edit', "/places/" + place.id + "/edit" %></td>
    <td><%= link_to 'Destroy', "/places/" + place.id, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<center>
<div id="mapstraction" style="width: 600px; height: 480px;"></div>
</center>
<script src="http://maps.google.com/maps?file=api&v=2&key=ABQIAAAA-Bvb4fd01uf9YyfYmqh8_xS-ElhMe_ukLaR64ugtTNumKWUsNhRFneQOHBoN5wjDD4sJhoeF1-Bgig" type="text/javascript"></script>
<% javascript_tag do -%>
 // initialise the map with your choice of API
      var mapstraction = new Mapstraction('mapstraction','google');
      
      var myPoint = new LatLonPoint(48.8692414,2.3322234);
      // display the map centered on a latitude and longitude (Google zoom levels)
      mapstraction.setCenterAndZoom(myPoint, 12);
      mapstraction.addControls({zoom: 'large'});
      mapstraction.addOverlay("http://party.agnovi.net/places.kml");

<% end -%>

<%= link_to 'New place', new_place_path %>
