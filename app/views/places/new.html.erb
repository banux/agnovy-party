<h1>New place</h1>

<% form_for(@place) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :place_type %><br />
    <%= f.select :place_type, {"Bar" => "bar", "Restaurant" => "restaurant"} %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :visit %><br />
    <%= f.check_box :visit %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </p>
  
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', places_path %>
